<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0.5dp"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    android:id="@+id/wrap"
    android:layout_margin="0.5dp">


    <TextView
        android:text="Hikaruu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        tools:text="Hik"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/black_86p"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvRelativeTimestamp"
        android:textAlignment="viewStart"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="@string/_64_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        tools:text="Hikaruu"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif-thin"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        android:elevation="1dp"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@+id/tvRelativeTimestamp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/tvRelativeTimestamp"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif-thin"
        android:maxLines="1"
        android:textSize="12sp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/tvEmail"

        app:layout_constraintVertical_bias="0.07"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvText"
        android:textColor="@color/black_86p"
        android:autoLink="web"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

</android.support.constraint.ConstraintLayout>