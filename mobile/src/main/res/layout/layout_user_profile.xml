<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:background="@color/card_default_background"
    >


    <ImageView
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:srcCompat="@color/action_button_background"
        android:id="@+id/ivBanner"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
    <FrameLayout
        android:id="@+id/flCover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ivBanner"
        android:layout_marginStart="16dp"

        app:layout_constraintBottom_toBottomOf="@+id/button"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:srcCompat="@color/circular_button_normal"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="19.5dp"
            app:cardBackgroundColor="@color/card_default_background"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/ic_camera_alt_24dp"

                    />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>


    </FrameLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="Thiet lap Ho so"
        android:layout_width="wrap_content"
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/ivBanner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        tools:text="Thiet lap Ho so"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif-thin"
        android:layout_height="30dp" />

    <TextView
        android:text="Hik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/flCover"
        app:layout_constraintLeft_toLeftOf="@+id/flCover"
        tools:text="Hik"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="@color/black_86p" />

    <TextView
        android:text=" &#64;hikaruu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="Hikaruu"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif-thin" />

    <TextView
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        android:layout_marginTop="16dp"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:elevation="1dp"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="DANG THEO DOI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="9 Nguoi theo doi"
        android:layout_marginStart="4dp"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif-thin"
        android:textSize="12sp" />

    <TextView
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/black_86p"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:elevation="1dp"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.13"
        app:layout_constraintBottom_toBottomOf="@+id/textView8" />

    <TextView
        android:text="NGUOI THEO DOI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        tools:text="9 Nguoi theo doi"
        android:textColor="@color/black_86p"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        android:layout_marginStart="4dp"
        android:fontFamily="sans-serif-thin" />


</android.support.constraint.ConstraintLayout>
